@model TaxCalculationRequest

@{
    ViewData["Title"] = "Tax Calculator";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Tax Calculator</h1>

            <form asp-controller="Home" asp-action="CalculateTax" method="post">
                <div class="form-group">
                    <label for="PostalCode">Postal Code:</label>
                    <input class="form-control" asp-for="PostalCode" />
                </div>

                <div class="form-group">
                    <label for="AnnualIncome">Annual Income:</label>
                    <input class="form-control" asp-for="AnnualIncome" />
                </div>
                <br />
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Calculate Tax</button>
                </div>
            </form>

            @if (ViewBag.CalculatedTax != null)
            {
                <p>Calculated Tax: @ViewBag.CalculatedTax</p>
            }
        </div>
    </div>
</div>
